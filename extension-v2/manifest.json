{
  "manifest_version": 3,
  "name": "Reply Guy",
  "version": "2.0.0",
  "description": "Twitter engagement overlay - navigate and reply with keyboard shortcuts",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Toggle Reply Guy overlay"
    }
  },
  "action": {
    "default_title": "Reply Guy"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
