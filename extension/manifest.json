{
  "manifest_version": 3,
  "name": "Reply Guy",
  "version": "1.0.0",
  "description": "Twitter engagement automation - add profiles and quick-reply to tweets",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:3000/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["dashboard-bridge.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "add-profile": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Add current profile to Reply Guy watchlist"
    },
    "quick-reply": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Generate quick reply for focused tweet"
    }
  }
}
